{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "*.ts",
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.tsx",
        "./**/*.vue",
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.tsx",
        "./**/*.vue"
    ]
}
